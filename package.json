{
  "private": true,
  "workspaces": [
    "esbuild-host",
    "webpack-remote",
    "webpack-host"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:esbuild-host": "yarn workspace esbuild-host build",
    "build:webpack-remote": "yarn workspace webpack-remote build",
    "build:webpack-host": "yarn workspace webpack-host build",
    "start": "run-p start:*",
    "start:esbuild-host": "PORT=3000 yarn workspace esbuild-host start",
    "start:webpack-remote": "PORT=3001 yarn workspace webpack-remote start",
    "start:webpack-host": "PORT=3002 yarn workspace webpack-host start"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "prettier": "2.3.1"
  }
}
